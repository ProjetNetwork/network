{% extends "FOSUserBundle::layout.html.twig" %}
{% block login %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
  <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet" />
  <script src="{{asset('js/bootstrap.js') }}"></script>
  <script src="{{asset('js/bootstrap.min.js') }}"></script>
  <script src="{{asset('js/javascript.js') }}"></script>
<body style="background: #456; font-family: 'Open Sans', sans-serif;">
<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
<div class="login">
  <div class="login-triangle"></div>
  
  <h2 class="login-header">Log in</h2>

  <form class="login-container">

<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Nom d'utilisateur"/>
    <input type="password" id="password" name="_password" required="required" rows="5" placeholder="Mot de passe"/>
    <input type="submit" id="_submit" name="_submit" value="GO" />
  </form>
</div>
</form>
</body>
{% endblock fos_user_content %}
{% endblock %}
