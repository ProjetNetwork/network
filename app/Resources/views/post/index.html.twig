{% block event %}
    <div class='spiralContainer' style="float: left">
        <div class='spiral'>
    </div>
    </div>
    <div>
        <h1>Publication</h1>
    </div>
    {% for post in posts |reverse%} 
        <nav class="navbar navbar-custom-publication publication-container-collapse" style="background-color: #000000>
        <button class="btn" data-toggle="collapse" data-target="#demo{{ loop.index }}"><i><span id="collapse-span" class="glyphicon glyphicon-menu-down" style="font-size: 35px;color: black;"></span></i>
      <p class="publication-date-collapse">Le {{post.date|date('d/m/Y')}} Ã  {{post.date|date('H:i')}}</p> 
        <p class="publication-text-collapse">{{post.title}}</p></button>
