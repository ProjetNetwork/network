{% extends 'base.html.twig' %}

{% block event %}
    <h1>Modifier l'évenement</h1>
    <div class="well">
        {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <input type="submit" value="Edit" />
        {{ form_end(edit_form) }}
        <a href="{{ path('evenement_index') }}">Revenir à la liste</a>
        {{form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
{% block leftmenu %}
  <div class="row content">
      <ul class="nav nav-pills nav-stacked">
        <a class="btn  btn--icon  btn--add" href="{{ path('evenement_index')}}"><i>+</i><span>Liste des events</span></a>
        <a class="btn  btn--icon  btn--add" href="{{ path('evenement_new')}}"><i>+</i><span>Creer un event</span></a>
        <a class="btn  btn--icon  btn--add" href="{{ path('evenement_new')}}"><i>+</i><span>Event du jour</span></a>
      </ul>
  </div>
{% endblock %}
