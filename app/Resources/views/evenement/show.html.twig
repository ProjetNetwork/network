{% extends 'base.html.twig' %}

{% block event %}
    <div class="well">
        <h1>{{ evenement.name }}</h1>
        <div class="well">
            {{ evenement.message }}
        </div>
        <a href="{{ path('evenement_index') }}">Revenir à la liste</a></br>
        <a href="{{ path('evenement_edit', { 'id': evenement.id }) }}">Modifier</a>
         {{ form_start(delete_form) }}
             <input type="submit" value="Delete" class="btn btn-danger">
         {{ form_end(delete_form) }}
    </div>
{% endblock %}

{% block leftmenu %}
  <div class="row content">
    <div class="col-sm-2">
      <ul class="nav nav-pills nav-stacked">

        <li><a href="#">Ajouter un événement</a></li>
        <li><a href="#">Liste des événements</a></li>
        <li><a href="#">Événement du jour</a></li>
      </ul>
  </div>
{% endblock %}